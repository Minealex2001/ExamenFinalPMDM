<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Se define una variable de tipo ItemListDetails que se utilizarÃ¡ para enlazar los datos -->
    <data>
        <variable
            name="move"
            type="com.example.examenfinal.models.MoveListItem" />
    </data>

    <!-- Se define un TextView para mostrar el nombre del elemento. El texto se enlaza a la propiedad "name" del objeto "item" -->
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{move.name}"
        android:textSize="50sp" />
</layout>